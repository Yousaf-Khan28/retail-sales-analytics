import pandas as pd
import matplotlib.pyplot as plt

df = pd.read_csv("../data/raw/Sample - Superstore.csv", encoding = "latin1")

df.head(20)


df.shape


print("Shape:", df.shape)
df.info()


(df.groupby("Category")["Sales"]
   .sum()
   .sort_values(ascending=False)
   .plot(kind="bar", title="Total Sales by Category"))

plt.ylabel("Sales")
plt.tight_layout()
plt.show()


(df.groupby("Category")["Profit"]
   .sum()
   .sort_values(ascending=False)
   .plot(kind="bar", title="Total Profit by Category"))

plt.ylabel("Profit")
plt.tight_layout()
plt.show()


df["Order Date"] = pd.to_datetime(df["Order Date"], errors="coerce")

monthly_sales = (
    df.set_index("Order Date")["Sales"]
      .resample("ME")
      .sum()
)

monthly_sales.plot(title="Monthly Sales Trend")
plt.ylabel("Sales")
plt.tight_layout()
plt.show()


(df.groupby("Region")["Profit"]
   .sum()
   .sort_values()
   .plot(kind="barh", title="Total Profit by Region"))

plt.xlabel("Profit")
plt.tight_layout()
plt.show()


(df.groupby("Sub-Category")["Profit"]
   .sum()
   .sort_values()
   .head(10)
   .plot(kind="barh", title="Top 10 Loss-Making Sub-Categories"))

plt.xlabel("Profit")
plt.tight_layout()
plt.show()



